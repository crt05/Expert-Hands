<div cass="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header bg-dark text-center">
      <h3 class="text-white">Nueva cita</h3>
    </div>
    <div class="card-body text-right">
      <form action="/citas/new-cita" method="POST">
        <select name="proveedor" id="">
          <option value="">Seleccione un proveedor</option>
          {{#each proveedores}}
            <option value="{{this._id}}">{{this.user.name}}</option>
          {{/each}}
        </select>

        <textarea
          name="detalles"
          rows="3"
          placeholder="Detalles de la cita"
          class="form-control mb-2"
        ></textarea>

        <input type="datetime-local" name="fecha" class="form-control mb-2" />

        <input type="text" name="estado" placeholder="Estado" class="form-control mb-2" />

        <button>
          Agendar
        </button>
      </form>
    </div>
  </div>
</div>